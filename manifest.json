{
    "manifest_version": 3,
    "name": "Send It AI",
    "version": "1.0",
    "description": "Extract Name and Email from selected text using local AI.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://unsymptomatical-nonperverted-jacinta.ngrok-free.dev/*"
    ],
    "action": {
        "default_title": "Send It AI",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}